<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.pallavi.norag.Home">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context="com.example.pallavi.norag.Introduction"
        tools:showIn="@layout/app_bar_introduction"
        android:id="@+id/ll"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="120sp"
            android:layout_marginTop="15sp"
            android:fontFamily="cursive"
            android:text="Introduction"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="#AFB423"
            android:textSize="35sp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5sp"
            android:layout_marginLeft="5sp"
            android:layout_marginRight="5sp"
            android:layout_marginTop="5sp"
            android:textAlignment="gravity"
            android:fontFamily="times new roman"
            android:text="‘NoRag’ is a Smart Phone application.It aims at removal and elimination of ragging.If mobile shaken hard ,it sends help alerts to particular contacts.And the receiver can see  victim’s information  along with the location  .However,in order to confirm it waits for 2 minutes ,the sender can enter password in these 2 minutes and cancel the alert that was to be sent.The receiver sends  acknowledged message to the sender on receiving.The app contains settings to edit message and other details."
            android:textColor="#000000"
            android:textSize="15sp" />

    </LinearLayout>

</FrameLayout>
